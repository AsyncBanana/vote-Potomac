---
import Button from "../components/Button.svelte";
import Textarea from "../components/Textarea.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout class="w-main">
	<h1 class="font-bold text-5xl">Submit suggestion</h1>
	<form class="form-control flex">
		<label class="label" for="title">Title</label>
		<input type="text" class="input input-bordered" id="title" />
		<Textarea markdown={true} resize={true} rows={10}>Description</Textarea>
		<Button class="mt-3">Suggest</Button>
	</form>
</BaseLayout>
